{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "xfn",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#symbols" },
		{ "include": "#comments" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(data|codata|def|codef|match|comatch)\\b"
			}]
		},
		"symbols": {
			"patterns": [{
				"match": "(;|:=|=>|,|:|\\.)",
				"name": "keyword.syntax"
			}]
		},
		"comments": {
			"patterns": [
				{
				  "match": "--.*$\n?",
				  "name": "comment.line.double-dash.syntax"
				}
			  ]
		  }
	},
	"scopeName": "source.xfn"
}
